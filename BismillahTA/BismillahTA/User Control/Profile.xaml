        <Button Name="changePatientButton" Content="Ubah" HorizontalAlignment="Left" Height="40" Margin="324,332,0,0" VerticalAlignment="Top" Width="114" FontSize="20" Foreground="#FFF9F3F3" Background="#FF2980B9" BorderBrush="{x:Null}" Click="changePatientButton_Click" FontFamily="Verdana" >
