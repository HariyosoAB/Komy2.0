                <DropShadowEffect Color="#FF2980B9"/>
            </Button.Effect>
        </Button>
        <Button Name="changeTherapistButton" Content="Ubah" HorizontalAlignment="Left" Height="40" Margin="789,387,0,0" VerticalAlignment="Top" Width="114" FontSize="20" Foreground="#FFF9F3F3" Background="#FF2980B9" BorderBrush="{x:Null}" Click="changeTherapistButton_Click" FontFamily="Verdana" >
