            </Button.Effect>
        </Button>
        <Button Name="savePatientButton" Content="Simpan" HorizontalAlignment="Left" Height="40" Margin="324,387,0,0" VerticalAlignment="Top" Width="114" FontSize="20" Foreground="#FFF9F3F3" Background="#FF2980B9" BorderBrush="{x:Null}" Click="savePatientButton_Click" FontFamily="Verdana" >
            <Button.Effect>
                <DropShadowEffect Color="#FF2980B9"/>
