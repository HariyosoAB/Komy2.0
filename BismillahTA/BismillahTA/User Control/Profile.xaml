        <Border BorderBrush="#FFDDDDDD" BorderThickness="2" Height="509" Margin="22,22,488,0" VerticalAlignment="Top"/>
        <Border BorderBrush="#FFDDDDDD" BorderThickness="2" Height="509" Margin="482,22,25,0" VerticalAlignment="Top"/>
        <Label Content="Nama" HorizontalAlignment="Left" Height="30" Margin="41,110,0,0" VerticalAlignment="Top" Width="97" FontFamily="verdana" FontSize="15"/>
        <Label Content="Usia" HorizontalAlignment="Left" Height="30" Margin="41,164,0,0" VerticalAlignment="Top" Width="97" FontFamily="verdana" FontSize="15"/>
        <Label Content="Jenis Kelamin" HorizontalAlignment="Left" Height="30" Margin="41,218,0,0" VerticalAlignment="Top" Width="118" FontFamily="verdana" FontSize="15"/>
        <Label Content="Alamat" HorizontalAlignment="Left" Height="30" Margin="41,272,0,0" VerticalAlignment="Top" Width="97" FontFamily="verdana" FontSize="15"/>
        <Label Name="labelNameTherapist" Content="Nama" HorizontalAlignment="Left" Height="30" Margin="513,110,0,0" VerticalAlignment="Top" Width="125" FontFamily="verdana" FontSize="15"/>
        <Label Name="labelAgeTherapist" Content="Usia" HorizontalAlignment="Left" Height="30" Margin="513,164,0,0" VerticalAlignment="Top" Width="97" FontFamily="verdana" FontSize="15"/>
        <Label Name="labelGenderTherapist" Content="Jenis Kelamin" HorizontalAlignment="Left" Height="30" Margin="513,218,0,0" VerticalAlignment="Top" Width="118" FontFamily="verdana" FontSize="15"/>
        <Label Name="labelAddressTherapist" Content="Alamat" HorizontalAlignment="Left" Height="30" Margin="513,272,0,0" VerticalAlignment="Top" Width="97" FontFamily="verdana" FontSize="15"/>
        <Label Name="labelContactTherapist" Content="Telepon" HorizontalAlignment="Left" Height="30" Margin="513,326,0,0" VerticalAlignment="Top" Width="97" FontFamily="verdana" FontSize="15"/>
        <TextBox Name="patientName" HorizontalAlignment="Left" Height="30" Margin="178,110,0,0" VerticalAlignment="Top" Width="260" FontFamily="verdana" FontSize="15" Foreground="#2980b9"/>
        <TextBox Name="patientAge" HorizontalAlignment="Left" Height="30" Margin="178,164,0,0" VerticalAlignment="Top" Width="260" FontFamily="verdana" FontSize="15" Foreground="#2980b9"/>
        <TextBox Name="patientGender" HorizontalAlignment="Left" Height="30" Margin="178,218,0,0" VerticalAlignment="Top" Width="260" FontFamily="verdana" FontSize="15" Foreground="#2980b9"/>
        <TextBox Name="patientAddress" HorizontalAlignment="Left" Height="30" Margin="178,272,0,0" VerticalAlignment="Top" Width="260" FontFamily="verdana" FontSize="15" Foreground="#2980b9"/>
        <TextBox Name="therapistName" HorizontalAlignment="Left" Height="30" Margin="643,110,0,0" VerticalAlignment="Top" Width="260" FontFamily="verdana" FontSize="15" Foreground="#2980b9"/>
        <TextBox Name="therapistAge" HorizontalAlignment="Left" Height="30" Margin="643,164,0,0" VerticalAlignment="Top" Width="260" FontFamily="verdana" FontSize="15" Foreground="#2980b9"/>
        <TextBox Name="therapistGender" HorizontalAlignment="Left" Height="30" Margin="643,218,0,0" VerticalAlignment="Top" Width="260" FontFamily="verdana" FontSize="15" Foreground="#2980b9"/>
