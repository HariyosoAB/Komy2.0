<Window x:Class="BismillahTA.Video"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video" Height="600" Width="1100">
    <Grid>
        <Frame Name="videoFrame" Content="Frame" HorizontalAlignment="Left" Height="557" Margin="0,5,0,0" VerticalAlignment="Top" Width="943"/>
        <Button x:Name="closeButton" Content="Keluar" HorizontalAlignment="Left" Height="40" Margin="948,462,0,0" VerticalAlignment="Top" Width="114" FontSize="20" Foreground="#FFF9F3F3" Background="#FF2980B9" BorderBrush="{x:Null}" FontFamily="Verdana" Click="closeButton_Click" >
            <Button.Effect>
                <DropShadowEffect Color="#FF2980B9"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
